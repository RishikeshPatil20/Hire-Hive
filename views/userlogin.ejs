<%- include('nav.ejs') %>

<form action="/authenticateLogin" method="post" >

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="UserEmail" value="<%= typeof email !== 'undefined' ? email : '' %>" required>
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="UserPassword" required>
    </div>

  
    
    <button type="submit" class="btn btn-primary">Login</button>
</form>