
<%- include('nav.ejs') %>
<div class="basic-form">
  <form method="post" action="/authenticateRecruiterLogin">
      <div class="mb-3"> <label for="name">Name</label>
        <input type="text" id="name" name="name" placeholder="Enter your name" required>
      </div>
      <div class="mb-3">
        <label for="recruiterEmail">Email</label>
        <input type="email" id="recruiterEmail" name="recruiterEmail" placeholder="Enter your email" required>
      </div>

      <div class="mb-3">
        <label for="recruiterPassword">Password</label>
        <input type="password" id="recruiterPassword" name="recruiterPassword" placeholder="Enter your password" required>
      </div>
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  <!-- Add login link button below the form -->
  <div class="text-center mt-3">
    <a href="/viewRecruiterLogin" class="btn btn-secondary">Login</a>
  </div>
</div>

