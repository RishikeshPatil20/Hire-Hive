
<%- include('nav.ejs') %>
<div class="basic-form">
  <form method="post" action="/updateRecruiterDetails">
      <!-- Recruiter ID (Hidden Field) -->
      <input type="hidden" id="recruiterId" name="recruiterId" value="<%= recruiterId %>">

      <!-- Recruiter Name -->
      <div class="mb-3">
        <label for="name">Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          placeholder="Enter your name" 
          value="<%= recruiter.name %>" 
          required>
      </div>

      <!-- Recruiter Email -->
      <div class="mb-3">
        <label for="recruiterEmail">Email</label>
        <input 
          type="email" 
          id="recruiterEmail" 
          name="recruiterEmail" 
          placeholder="Enter your email" 
          value="<%= recruiter.email %>" 
          required>
      </div>

      <!-- Recruiter Password -->
      <div class="mb-3">
        <label for="recruiterPassword">Password</label>
        <input 
          type="password" 
          id="recruiterPassword" 
          name="recruiterPassword" 
          placeholder="Enter a new password (leave blank to keep current password)">
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-success">Update</button>
  </form>

  <!-- Add Cancel Button below the form -->
  <div class="text-center mt-3">
    <a href="/viewRecruiterProfile" class="btn btn-secondary">Cancel</a>
  </div>
</div>
